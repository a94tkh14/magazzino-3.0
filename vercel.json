{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_SUPABASE_URL": "@react_app_supabase_url",
    "REACT_APP_SUPABASE_ANON_KEY": "@react_app_supabase_anon_key",
    "REACT_APP_GOOGLE_ADS_CLIENT_ID": "@react_app_google_ads_client_id",
    "REACT_APP_GOOGLE_ADS_CLIENT_SECRET": "@react_app_google_ads_client_secret",
    "REACT_APP_META_CLIENT_ID": "@react_app_meta_client_id",
    "REACT_APP_META_CLIENT_SECRET": "@react_app_meta_client_secret"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
} 